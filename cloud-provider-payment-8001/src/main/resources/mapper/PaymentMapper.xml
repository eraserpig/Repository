<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dad.springcloud.dao.PaymentDao">

    <resultMap id="BaseResultMap" type="com.dad.springcloud.entities.Payment" >
        <!--    数据库         实体类-->
        <id column="id" property="id" jdbcType="BIGINT"/>
        <id column="serial" property="serial" jdbcType="VARCHAR" />
    </resultMap>
    <sql id="selectPaymentVo">
        select id,serial  from payment
    </sql>




    <!--       参数类型        返回值                   主键    -->
    <insert id="createPayment" parameterType="Payment" useGeneratedKeys="true" keyProperty="id">
        insert into payment(serial) values (#{serial});
    </insert>


    <select id="getPaymentById" parameterType="Long" resultMap="BaseResultMap" >
        <include refid="selectPaymentVo"/>
        <where>
           <if test="id!=null and id!=''"> and id =#{id} </if>
        </where>
    </select>

    <delete id="delPaymentById" parameterType="long">
        delete from payment where id=#{id}
    </delete>

     <select id="getPayMentList" parameterType="Payment" resultMap="BaseResultMap">
        <include refid="selectPaymentVo"/>
        <where>
            1=1
            <if test="id!=null and id !=''" > and id=#{id}</if>
            <if test="serial!=null and serial!=''"> and serial=#{serial}</if>
              order by id
        </where>
     </select>
        <update id="upPayment" parameterType="Payment" >
            update payment
        <trim prefix="SET" suffixOverrides=",">
            <if test="id!=null and id !=''" > id=#{id}</if>
            <if test="serial!=null and serial!=''"> and serial=#{serial}</if>
        </trim>
             where id=#{id}
        </update>

</mapper>
